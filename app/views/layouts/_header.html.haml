%header
  .navbar.navbar-fixed-top.navbar-inverse
    .navbar-inner
      .container
        = link_to 'Hotel Advisor', root_path, id: 'logo', class: 'brand'
        %ul.nav.pull-left
          - if user_signed_in?
            %li= link_to 'New hotel', new_hotel_path
        %nav
          %ul.nav.pull-right
            - if user_signed_in?
              %li= link_to 'Hotels', hotels_path
              %li#fat-menu.dropdown
                %a.dropdown-toggle{'data-toggle' => 'dropdown', href: '#'}
                  #{current_user.name}
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to 'Edit profile', edit_user_registration_path
                  %li.divider
                  %li= link_to 'Logout', destroy_user_session_path, method: 'delete'
            - else
              %li= link_to 'Login', new_session_path(resource_name)
              %li= link_to 'Sign up', new_registration_path(resource_name)